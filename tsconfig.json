{
  "include": ["build.config.ts", "src", "__tests__"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "lib": [
      "es2021",
      "ESNext",
      "dom",
    ],
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}